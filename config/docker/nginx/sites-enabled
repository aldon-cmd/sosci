server {

    listen 80;
    server_name sosci.tv;
    charset utf-8;

    location /media {
        alias /data/sosci/public/media;
    }

    location /static {
        alias /data/sosci/public/static;
    }

    location / {
        proxy_pass http://sosci:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

}